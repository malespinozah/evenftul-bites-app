﻿﻿
@{
    ViewBag.Title = "Delete";
}

<div class="wrap-width">
    <h2 style="margin-top: 2rem;">Delete @Model.RestaurantName</h2>
    <p>Are you sure you want to delete <strong>@Model.RestaurantName</strong>?</p>

    <form style="margin-top:2rem;" action="/Restaurant/Delete/@Model.RestaurantId" method="POST">
        <button style="width:10rem" type="submit" class="btn btn-danger">Confirm Delete</button>
        <a style="width:8rem;margin-left: 0.2rem;" href="/Restaurant/Details/@Model.RestaurantId" class="btn btn-outline-secondary" role="button">Cancel</a>
    </form>
</div>