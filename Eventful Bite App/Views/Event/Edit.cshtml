﻿@model Eventful_Bite_App.Models.EventDto
@{
    ViewBag.Title = "Edit";
}

<div class="wrap-width">
    <h2 style="margin-top: 2rem;">Edit Event</h2>

    <form action="/Event/Update/@Model.EventId" method="post">
        <div style="display:none;">
            @* Pass through the Event ID *@
            <input type="text" name="EventId" value="@Model.EventId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Event Name:</label>
            <input type="text" name="EventName" value="@Model.EventName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Event Description:</label>
            <input type="text" name="EventDescription" value="@Model.EventDescription" class="form-control" />
        </div>
        <div class="form-group">
            <label>Event Date:</label>
            <input type="date" name="EventDate" value="@Model.EventDate.ToString("yyyy-MM-dd")" class="form-control" />
        </div>
        <div class="form-group">
            <label>Event Time:</label>
            <input type="time" name="EventTime" value="@Model.EventDate.ToString("HH:mm")" class="form-control" />
        </div>
        <div class="form-group">
            <label>Event Price:</label>
            <input type="number" name="EventPrice" value="@Model.EventPrice" step="0.1" class="form-control" />
        </div>
        <div class="form-group">
            <label>Event Address: </label>
            <input type="text" name="EventAddress" value="@Model.EventAddress" class="form-control" />
        </div>
        <div class="form-group">
            <label for="DistrictId">District Id: </label>
            <select id="DistrictId" name="DistrictId" class="form-select">
                <option value="@Model.DistrictId"></option>
                <option value="1">Markham</option>
                <option value="2">North York</option>
                <option value="3">Scarborough</option>
                <option value="4">Mississauga</option>
                <option value="5">Brampton</option>
                <option value="6">Vaughan</option>
                <option value="7">Richmond Hill</option>
                <option value="8">Toronto</option>
            </select>
        </div>
        <div style="margin-top:2rem;">
            <input type="submit" value="Update Event Event" class="btn btn-primary" />
            <a style="margin-left: 0.2rem;" href="/Event/Details/@Model.EventId" class="btn btn-outline-secondary" role="button">Cancel</a>
        </div>
    </form>
</div>