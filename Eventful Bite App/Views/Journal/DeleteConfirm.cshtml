@model Eventful_Bite_App.Models.JournalDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="wrap-width">
    <h2>Delete <i>@Model.JournalTitle</i></h2>
    <p>Are you sure you want to delete this entry?</p>


    <form style="margin-top:2rem;" action="/Journal/Delete/@Model.JournalId" method="post">
        <input type="submit" value="Confirm Delete" class="btn btn-danger" />
        <a href="/Journal/List" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>