﻿﻿@model Eventful_Bite_App.Models.BranchDto

@{
    ViewBag.Title = "Edit";
}
<div class="wrap-width">
    <h2>Update Branch</h2>
    <h4 style="margin-top:1.5rem">@Model.RestaurantName (@Model.Location) </h4>


    <form style="margin-top:1.5rem" method="POST" action="/Branch/Update/@Model.BranchId">
        <div style="display:none">
            <input type="text" name="BranchId" value="@Model.BranchId" />
        </div>
        <div style="display:none">
            <input type="text" name="RestaurantId" value="@Model.RestaurantId" />
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select name="Status" class="form-control" id="status">
                <option value="Not Visited" @(Model.Status == "Not Visited" ? "selected" : "")>Not Visited</option>
                <option value="Visited" @(Model.Status == "Visited" ? "selected" : "")>Visited</option>
            </select>
        </div>
        <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" name="Location" class="form-control" id="location" value="@Model.Location" required>
        </div>
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" name="Address" class="form-control" id="address" value="@Model.Address" required>
        </div>
        <div style="margin-bottom:2rem" class="form-group">
            <label for="review">Review:</label>
            <textarea class="form-control" id="review" rows="2" name="Review" value="@Model.Review">@Model.Review</textarea>
        </div>

        <button style="width:7rem" type="submit" class="btn btn-primary" value="update">Update</button>
        <a style="width: 5.5rem; margin-left:0.2rem" href="/Branch/Details/@Model.BranchId" class="btn btn-outline-secondary" role="button">Cancel</a>
    </form>
</div>